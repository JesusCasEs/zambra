---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
import escuelas from '../../data/escuelas.json';

export function getStaticPaths() {
  return escuelas.map(escuela => ({
    params: { id: escuela.id },
    props: { escuela }
  }));
}

const { escuela } = Astro.props;

const iconMap: Record<string, string> = {
  cante: 'üé§',
  baile: 'üíÉ',
  guitarra: 'üé∏',
  percusion: 'ü•Å'
};
---

<Layout title={`${escuela.nombre} - Escuelas de Flamenco`} description={escuela.descripcion}>
  <Navigation />
  
  <section class="detail-header">
    <div class="container">
      <a href="/escuelas" class="back-link">‚Üê Volver a Escuelas</a>
