        </aside>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<style>
  .detail-header {
    background: var(--gradient-secondary);
    padding: var(--spacing-xl) 0 var(--spacing-3xl);
    margin-bottom: var(--spacing-xl);
  }
  
  .back-link {
    display: inline-flex;
    align-items: center;
    color: var(--color-bg-medium);
    text-decoration: none;
    margin-bottom: var(--spacing-lg);
    font-weight: 600;
    transition: color var(--transition-fast);
  }
  
  .back-link:hover {
    color: var(--color-bg-dark);
  }
  
  .header-content {
    display: flex;
    align-items: center;
    gap: var(--spacing-lg);
  }
  
  .header-content .badge {
    margin-bottom: var(--spacing-sm);
  }
  
  .header-icon {
    font-size: 5rem;
    background: rgba(10, 10, 10, 0.2);
    padding: var(--spacing-lg);
    border-radius: var(--radius-lg);
  }
  
  .detail-title {
    font-size: clamp(2rem, 4vw, 3rem);
    margin-bottom: var(--spacing-xs);
    color: var(--color-bg-dark);
  }
  
  .detail-subtitle {
    font-size: 1.25rem;
    color: var(--color-bg-dark);
    font-weight: 600;
    opacity: 0.8;
  }
  
  .detail-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: var(--spacing-xl);
  }
  
  .detail-main {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
  }
  
  .detail-card {
    background: var(--color-bg-medium);
    padding: var(--spacing-xl);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
  }
  
  .section-heading {
    color: var(--color-secondary);
    margin-bottom: var(--spacing-md);
    font-size: 1.75rem;
  }
  
  .detail-description {
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--color-text-secondary);
  }
  
  .contact-info {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
  }
  
  .contact-item {
    display: flex;
    gap: var(--spacing-md);
    align-items: flex-start;
  }
  
  .contact-icon {
    font-size: 2rem;
    flex-shrink: 0;
  }
  
  .contact-item strong {
    display: block;
    color: var(--color-text-primary);
    margin-bottom: var(--spacing-xs);
  }
  
  .contact-item p {
    color: var(--color-text-secondary);
    margin: 0;
    word-break: break-word;
  }
  
  .contact-item a {
    color: var(--color-secondary);
    text-decoration: none;
    transition: color var(--transition-fast);
  }
  
  .contact-item a:hover {
    color: var(--color-secondary-dark);
    text-decoration: underline;
  }
  
  .detail-sidebar {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
  }
  
  .sidebar-card {
    background: var(--color-bg-medium);
    padding: var(--spacing-lg);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
  }
  
  .sidebar-card h3 {
    color: var(--color-secondary);
    margin-bottom: var(--spacing-sm);
    font-size: 1.25rem;
  }
  
  .highlight-text {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-text-primary);
    font-family: var(--font-heading);
  }
  
  .sidebar-text {
    color: var(--color-text-secondary);
    line-height: 1.6;
  }
  
  .cta-card {
    background: var(--gradient-primary);
  }
  
  .cta-card h3,
  .cta-card .sidebar-text {
    color: var(--color-text-primary);
  }
  
  @media (max-width: 968px) {
    .detail-grid {
      grid-template-columns: 1fr;
    }
    
    .header-content {
      flex-direction: column;
      text-align: center;
    }
  }
</style>
