---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import penas from '../data/penas.json';

const provincias = [...new Set(penas.map(p => p.provincia))].sort();
---

<Layout title="Pe침as Flamencas - Andaluc칤a" description="Directorio de pe침as flamencas en Andaluc칤a. Descubre los espacios dedicados al arte jondo en toda la regi칩n.">
  <Navigation />
  
  <section class="page-header">
    <div class="container">
      <h1 class="page-title">Pe침as Flamencas</h1>
      <p class="page-description">
        Explora las pe침as flamencas de Andaluc칤a, espacios donde el flamenco se vive con autenticidad y pasi칩n.
      </p>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="controls-bar">
        <div class="filter-section">
          <label for="provincia-filter" class="form-label">Filtrar por provincia:</label>
          <select id="provincia-filter" class="form-select">
            <option value="">Todas las provincias</option>
            {provincias.map(provincia => (
              <option value={provincia}>{provincia}</option>
            ))}
          </select>
        </div>
        
        <div class="stats">
          <span id="results-count">{penas.length}</span> pe침as encontradas
        </div>
      </div>
      
      <div class="penas-grid" id="penas-container">
        {penas.map(pena => (
          <article class="pena-card" data-provincia={pena.provincia} data-id={pena.id}>
            <div class="card-image-placeholder pena-image">
              <span class="pena-icon">游꿪</span>
            </div>
            <div class="card-content">
              <h3 class="card-title">{pena.nombre}</h3>
              <p class="card-subtitle">{pena.provincia}</p>
              <p class="card-description">{pena.descripcion.substring(0, 120)}...</p>
              <div class="pena-info">
                <p class="info-item">游늸 {pena.direccion}</p>
                {pena.telefono && <p class="info-item">游 {pena.telefono}</p>}
              </div>
              <a href={`/penas/${pena.id}`} class="btn btn-secondary mt-md">Ver Detalles</a>
            </div>
          </article>
        ))}
      </div>
      
      <div id="no-results" class="no-results hidden">
        <p>No se encontraron pe침as con los filtros seleccionados.</p>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<style>
  .page-header {
    background: rgba(230, 245, 240, 0.95) !important;
    backdrop-filter: blur(10px);
    padding: var(--spacing-3xl) 0 var(--spacing-xl);
    text-align: center;
    margin-bottom: var(--spacing-xl);
  }

  .page-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    margin-bottom: var(--spacing-md);
    color: var(--color-primary);
  }

  .page-description {
    font-size: clamp(1rem, 2vw, 1.25rem);
    color: #000000;
    max-width: 700px;
    margin: 0 auto;
  }
  
  .controls-bar {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    margin-bottom: var(--spacing-xl);
    padding: var(--spacing-lg);
    background: var(--color-bg-medium);
    border-radius: var(--radius-lg);
    flex-wrap: wrap;
    gap: var(--spacing-md);
  }
  
  .filter-section {
    flex: 1;
    min-width: 250px;
  }
  
  .stats {
    color: var(--color-primary);
    font-weight: 600;
    font-size: 1.1rem;
  }

  .stats span {
    font-size: 1.5rem;
    font-family: var(--font-heading);
  }

  .penas-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: var(--spacing-lg);
  }

  .pena-card {
    background: var(--color-bg-medium);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: all var(--transition-base);
    box-shadow: var(--shadow-md);
    border: 2px solid transparent;
  }

  .pena-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-xl);
    border-color: var(--color-primary);
  }

  .pena-card.hidden {
    display: none;
  }

  .pena-image {
    background: var(--gradient-primary);
    height: 200px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .pena-icon {
    font-size: 4rem;
    filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.3));
  }

  .pena-card .card-title {
    color: var(--color-primary);
  }

  .pena-card .card-subtitle {
    color: var(--color-primary);
  }

  .pena-card .btn-secondary {
    background: #FFFFFF;
    border: 2px solid var(--color-primary);
    color: var(--color-primary);
  }

  .pena-card .btn-secondary:hover {
    background: var(--color-primary);
    color: #FFFFFF;
  }

  .pena-info {
    margin-top: var(--spacing-md);
    padding-top: var(--spacing-md);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .info-item {
    color: var(--color-text-secondary);
    font-size: 0.9rem;
    margin-bottom: var(--spacing-xs);
  }
  
  .no-results {
    text-align: center;
    padding: var(--spacing-3xl);
    background: var(--color-bg-medium);
    border-radius: var(--radius-lg);
    color: var(--color-text-secondary);
    font-size: 1.2rem;
  }
  
  .no-results.hidden {
    display: none;
  }
  
  @media (max-width: 768px) {
    .penas-grid {
      grid-template-columns: 1fr;
    }
    
    .controls-bar {
      flex-direction: column;
      align-items: stretch;
    }
    
    .stats {
      text-align: center;
    }
  }
</style>

<script>
  const allPenas = Array.from(document.querySelectorAll('.pena-card'));
  const provinciaFilter = document.getElementById('provincia-filter') as HTMLSelectElement;
  const resultsCount = document.getElementById('results-count');
  const noResults = document.getElementById('no-results');
  
  function filterPenas() {
    const selectedProvincia = provinciaFilter?.value || '';
    let visibleCount = 0;
    
    allPenas.forEach(pena => {
      const penaProvincia = pena.getAttribute('data-provincia') || '';
      const matches = !selectedProvincia || penaProvincia === selectedProvincia;
      
      if (matches) {
        pena.classList.remove('hidden');
        visibleCount++;
      } else {
        pena.classList.add('hidden');
      }
    });
    
    if (resultsCount) {
      resultsCount.textContent = visibleCount.toString();
    }
    
    if (noResults) {
      if (visibleCount === 0) {
        noResults.classList.remove('hidden');
      } else {
        noResults.classList.add('hidden');
      }
    }
  }
  
  provinciaFilter?.addEventListener('change', filterPenas);
</script>
