---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import escuelas from '../data/escuelas.json';

const provincias = [...new Set(escuelas.map(e => e.provincia))].sort();
const tipos = [...new Set(escuelas.map(e => e.tipo))].sort();
---

<Layout title="Escuelas y Asociaciones - Andaluc√≠a" description="Directorio de escuelas y asociaciones de flamenco en Andaluc√≠a. Aprende cante, baile, guitarra y percusi√≥n flamenca.">
  <Navigation />
  
  <section class="page-header">
    <div class="container">
      <h1 class="page-title">Escuelas y Asociaciones</h1>
      <p class="page-description">
        Encuentra las mejores escuelas y asociaciones de flamenco en Andaluc√≠a. Formaci√≥n en cante, baile, guitarra y percusi√≥n.
      </p>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="controls-bar">
        <div class="filters-row">
          <div class="filter-section">
            <label for="provincia-filter" class="form-label">Provincia:</label>
            <select id="provincia-filter" class="form-select">
              <option value="">Todas</option>
              {provincias.map(provincia => (
                <option value={provincia}>{provincia}</option>
              ))}
            </select>
          </div>
          
          <div class="filter-section">
            <label for="tipo-filter" class="form-label">Especialidad:</label>
            <select id="tipo-filter" class="form-select">
              <option value="">Todas</option>
              {tipos.map(tipo => (
                <option value={tipo}>{tipo.charAt(0).toUpperCase() + tipo.slice(1)}</option>
              ))}
            </select>
          </div>
        </div>
        
        <div class="stats">
          <span id="results-count">{escuelas.length}</span> escuelas encontradas
        </div>
      </div>
      
      <div class="escuelas-grid" id="escuelas-container">
        {escuelas.map(escuela => (
          <article class="escuela-card" data-provincia={escuela.provincia} data-tipo={escuela.tipo} data-id={escuela.id}>
            <div class="card-image-placeholder escuela-image">
              <span class="escuela-icon">
                {escuela.tipo === 'cante' && 'üé§'}
                {escuela.tipo === 'baile' && 'üíÉ'}
                {escuela.tipo === 'guitarra' && 'üé∏'}
                {escuela.tipo === 'percusion' && 'ü•Å'}
              </span>
            </div>
            <div class="card-content">
              {/* <div class="escuela-header">
                <span class="badge badge-secondary">{escuela.tipo}</span>
              </div> */}
              <h3 class="card-title">{escuela.nombre}</h3>
              <p class="card-subtitle">{escuela.provincia}</p>
              <p class="card-description">{escuela.descripcion.substring(0, 120)}...</p>
              <div class="escuela-info">
                <p class="info-item">üìç {escuela.direccion}</p>
                {escuela.telefono && <p class="info-item">üìû {escuela.telefono}</p>}
                {escuela.email && <p class="info-item">‚úâÔ∏è {escuela.email}</p>}
              </div>
              <a href={`/escuelas/${escuela.id}`} class="btn btn-secondary mt-md">Ver Detalles</a>
            </div>
          </article>
        ))}
      </div>
      
      <div id="no-results" class="no-results hidden">
        <p>No se encontraron escuelas con los filtros seleccionados.</p>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<style>
  .page-header {
    background: rgba(230, 245, 240, 0.95) !important;
    backdrop-filter: blur(10px);
    padding: var(--spacing-3xl) 0 var(--spacing-xl);
    text-align: center;
    margin-bottom: var(--spacing-xl);
  }

  .page-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    margin-bottom: var(--spacing-md);
    color: var(--color-primary);
  }

  .page-description {
    font-size: clamp(1rem, 2vw, 1.25rem);
    color: #000000;
    max-width: 700px;
    margin: 0 auto;
  }
  
  .controls-bar {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    margin-bottom: var(--spacing-xl);
    padding: var(--spacing-lg);
    background: var(--color-bg-medium);
    border-radius: var(--radius-lg);
    flex-wrap: wrap;
    gap: var(--spacing-md);
  }
  
  .filters-row {
    display: flex;
    gap: var(--spacing-md);
    flex-wrap: wrap;
    flex: 1;
  }
  
  .filter-section {
    flex: 1;
    min-width: 200px;
  }
  
  .stats {
    color: var(--color-primary);
    font-weight: 600;
    font-size: 1.1rem;
    white-space: nowrap;
  }

  .stats span {
    font-size: 1.5rem;
    font-family: var(--font-heading);
  }

  .escuelas-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: var(--spacing-lg);
  }

  .escuela-card {
    background: var(--color-bg-medium);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: all var(--transition-base);
    box-shadow: var(--shadow-md);
    border: 2px solid transparent;
  }

  .escuela-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-xl);
    border-color: var(--color-primary);
  }
  
  .escuela-card.hidden {
    display: none;
  }
  
  .escuela-image {
    background: var(--gradient-primary);
    height: 200px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .escuela-icon {
    font-size: 4rem;
    filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.3));
  }

  .escuela-header {
    margin-bottom: var(--spacing-sm);
    background: var(--gradient-primary);
    padding: var(--spacing-sm);
    margin: calc(var(--spacing-sm) * -1) calc(var(--spacing-md) * -1) var(--spacing-sm);
  }

  .escuela-header .badge {
    background: transparent !important;
    color: #FFFFFF !important;
  }

  .escuela-card .card-title {
    color: var(--color-primary);
  }

  .escuela-card .card-subtitle {
    color: var(--color-primary);
  }

  .escuela-card .btn-secondary {
    background: #FFFFFF;
    border: 2px solid var(--color-primary);
    color: var(--color-primary);
  }

  .escuela-card .btn-secondary:hover {
    background: var(--color-primary);
    color: #FFFFFF;
  }
  
  .escuela-info {
    margin-top: var(--spacing-md);
    padding-top: var(--spacing-md);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .info-item {
    color: var(--color-text-secondary);
    font-size: 0.9rem;
    margin-bottom: var(--spacing-xs);
    word-break: break-word;
  }
  
  .no-results {
    text-align: center;
    padding: var(--spacing-3xl);
    background: var(--color-bg-medium);
    border-radius: var(--radius-lg);
    color: var(--color-text-secondary);
    font-size: 1.2rem;
  }
  
  .no-results.hidden {
    display: none;
  }
  
  @media (max-width: 768px) {
    .escuelas-grid {
      grid-template-columns: 1fr;
    }
    
    .controls-bar {
      flex-direction: column;
      align-items: stretch;
    }
    
    .filters-row {
      flex-direction: column;
    }
    
    .stats {
      text-align: center;
    }
  }
</style>

<script>
  const allEscuelas = Array.from(document.querySelectorAll('.escuela-card'));
  const provinciaFilter = document.getElementById('provincia-filter') as HTMLSelectElement;
  const tipoFilter = document.getElementById('tipo-filter') as HTMLSelectElement;
  const resultsCount = document.getElementById('results-count');
  const noResults = document.getElementById('no-results');
  
  function filterEscuelas() {
    const selectedProvincia = provinciaFilter?.value || '';
    const selectedTipo = tipoFilter?.value || '';
    let visibleCount = 0;
    
    allEscuelas.forEach(escuela => {
      const escuelaProvincia = escuela.getAttribute('data-provincia') || '';
      const escuelaTipo = escuela.getAttribute('data-tipo') || '';
      
      const matchesProvincia = !selectedProvincia || escuelaProvincia === selectedProvincia;
      const matchesTipo = !selectedTipo || escuelaTipo === selectedTipo;
      
      if (matchesProvincia && matchesTipo) {
        escuela.classList.remove('hidden');
        visibleCount++;
      } else {
        escuela.classList.add('hidden');
      }
    });
    
    if (resultsCount) {
      resultsCount.textContent = visibleCount.toString();
    }
    
    if (noResults) {
      if (visibleCount === 0) {
        noResults.classList.remove('hidden');
      } else {
        noResults.classList.add('hidden');
      }
    }
  }
  
  provinciaFilter?.addEventListener('change', filterEscuelas);
  tipoFilter?.addEventListener('change', filterEscuelas);
</script>
